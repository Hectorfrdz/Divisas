<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.Inicio"
             Title="Inicio">

    <VerticalStackLayout Padding="20"
                         Spacing="25"
                         HorizontalOptions="Center">
        <Label
            Text="Bienvenidos a Divisas 'El Canario'"
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalOptions="Center"/>

        <Image
            Source="moneda512x512.png"
            WidthRequest="250"
            HeightRequest="250"
            Aspect="AspectFit"
            Margin="0,20,0,0"
            HorizontalOptions="Center"/>

        <Label
            Text="Explora nuestros sistema de divisas."
            FontSize="Medium"
            HorizontalOptions="Center"
            Margin="0,20,0,0"/>
    </VerticalStackLayout>

</ContentPage>