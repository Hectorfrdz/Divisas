<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.Divisas"
             Title="Divisas">

    <VerticalStackLayout Padding="20">
        <Label Text="Ingresar divisas"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <Button Text="AÃ±adir divisa"
                Command="{Binding AddDivisaCommand}"
                BackgroundColor="#FF5EB4FF"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"
                FontAttributes="Bold"/>

        <CollectionView ItemsSource="{Binding DivisasList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10"
                           BorderColor="Transparent"
                           Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}"/>
                            <Label Text="{Binding Valor}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>