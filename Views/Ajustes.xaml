        <Label Text="Ajustes"
               FontSize="Large"
               HorizontalOptions="Center"/>

        <TableView Intent="Form"
                   BackgroundColor="Transparent">
            <TableRoot>
                <TableSection Title="InformaciÃ³n del Usuario">
