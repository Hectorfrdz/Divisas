<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Divisas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Divisas.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Divisas">

    <TabBar Shell.TabBarBackgroundColor="#87CEEB"
            Shell.TabBarTitleColor="Black"
            Shell.TabBarUnselectedColor="Gray"
            Shell.TabBarForegroundColor="Black">

        <Tab Title="Inicio"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:Inicio}"/>
        </Tab>

        <Tab Title="Divisas"
             Icon="currency.png">
            <ShellContent ContentTemplate="{DataTemplate local:Divisas}"/>
        </Tab>

        <Tab Title="Ajustes"
             Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:Ajustes}"/>
        </Tab>
    </TabBar>
</Shell>
